    "@iconify-json/ph": "^1.2.2",
    "@lunariajs/core": "^0.1.1",
    "@mdit/plugin-container": "^0.16.0",
    "@mdit/plugin-figure": "^0.16.0",
    "@mdit/plugin-img-mark": "^0.16.0",
    "@mdit/plugin-img-size": "^0.16.0",
    "@mdit/plugin-mark": "^0.16.0",
    "@mdit/plugin-spoiler": "^0.16.0",
    "@mdit/plugin-sub": "^0.16.0",
    "@mdit/plugin-sup": "^0.16.0",
    "@radix-icons/vue": "^1.0.0",
    "@types/js-yaml": "^4.0.9",
    "@unhead/vue": "^1.11.18",
    "@vue/shared": "^3.5.13",
    "@vueuse/core": "^11.3.0",
    "@vueuse/integrations": "^11.3.0",
    "@vueuse/motion": "^2.2.6",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compressorjs": "^1.2.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "feed": "^4.2.2",
    "js-yaml": "^4.1.0",
    "ky": "^1.7.4",
    "markdown-it-footnote": "^4.0.0",
    "medium-zoom": "^1.1.0",
    "pinia": "^2.3.0",
    "qrcode": "^1.5.4",
    "radix-vue": "^1.9.12",

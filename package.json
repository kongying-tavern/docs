{
  "private": "true",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm build-vitepress",
    "build-blog": "tsx ./scripts/refreshBlogData.ts",
    "build-data": "pnpm use-data-env pnpm build-env && pnpm use-data-env pnpm build-member && pnpm use-data-env pnpm build-blog",
    "build-env": "tsx ./scripts/exportEnvFile.ts",
    "build-member": "tsx ./scripts/refreshMemberListData.ts",
    "build-mpa": "vitepress build --mpa --base /docs/",
    "build-vitepress": "vitepress build --base /docs/",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "git-cz",
    "dev": "vitepress",
    "lint": "prettier --check . && pnpm lint:zh",
    "lint:fix": "prettier --write . & pnpm lint:zh-fix",
    "lint:md": "markdownlint **/*.md",
    "lint:prettier": "prettier --check .",
    "lint:zh": "zhlint **/zh/**/*.md",
    "lint:zh-fix": "zhlint **/zh/**/*.md --fix",
    "lunaria:build": "lunaria build",
    "lunaria:preview": "lunaria preview",
    "prepare": "husky",
    "serve": "vitepress serve --base /docs/",
    "site:preview": "pnpm build-blog & vitepress build --base /",
    "up": "taze major -I",
    "use-data-env": "dotenv -e .env.data -c --"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "prettier --write"
    ],
    "*.{scss,sass,css}": [
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "prettier": "prettier-config-vuepress",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@iconify-json/ic": "^1.2.2",
    "@iconify-json/logos": "^1.2.4",
    "@iconify-json/lucide": "^1.2.20",

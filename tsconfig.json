{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@/*": [
        "./.vitepress/theme/*"
      ],
      "#theme/*": [
        "./.vitepress/theme/*"
      ],
      "~/*": [
        "./src/*"
      ],
      "vite": [
        "./node_modules/vite"
      ]
    }
  },
  "include": [
    "**/.vitepress/**/*.ts",
    "**/.vitepress/**/*.mts",
    "**/.vitepress/**/*.vue",
    "**/components/**/*.ts",
    "**/components/**/*.tsx",
    "**/components/**/*.vue",
    "**/composables/**/*.ts",
    "**/stores/**/*.ts",
    "**/scripts/**/*.ts",
    "**/src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "ts-node": {
    "esm": true
  }
}
